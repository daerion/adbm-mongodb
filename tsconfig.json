{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true,
    "importHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
